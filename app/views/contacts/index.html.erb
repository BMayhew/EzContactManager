<h1><%= current_user.email %>'s Contacts</h1>
<%= will_paginate @contacts %>
<table>
  <tr>
    <th>First Name</th>
    <th>Last name</th>
    <th>Street</th>
    <th>City</th>
    <th>State</th>
    <th>Postel code</th>
    <th>Cell phone</th>
    <th>Home phone</th>
    <th>Fax</th>
    <th>Notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @contacts.each do |contact| %>
  <tr>
    <td><%= contact.first_name.html_safe %></td>
    <td><%= contact.last_name.html_safe %></td>
    <td><%= contact.street.html_safe %></td>
    <td><%= contact.city.html_safe %></td>
    <td><%= contact.state.html_safe %></td>
    <td><%= contact.postal_code.html_safe %></td>
    <td><%= contact.home_phone.html_safe %></td>
    <td><%= contact.cell_phone.html_safe %></td>
    <td><%= contact.fax.html_safe %></td>
    <td><%= contact.notes.html_safe %></td>
    <td><%= link_to 'Show', contact %></td>
    <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
    <td><%= link_to 'Destroy', contact, :confirm => 'Are you sure you want to delete this product?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<%= will_paginate @contacts %>
<br />

<%= link_to 'New Contract', new_contact_path %>
<% if current_user %>
<div>
	Currently signed in as <%= current_user.email %>
</div>
<% end %>